<section id="login-container" class="container">
    <div class="section-title" data-aos="fade-down">
        <h2>SCHEDULE MEETING</h2>
    </div>
    <br>
    <form method="POST" id="host_meeting" action="/schedule-meeting">
        <div class="row justify-content-md-center" data-aos="fade-left">
            <div class="col-md-4 mx-auto">
                {{> errors}}
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <div class="form-group">
                    <label for="room_name">Room Name:</label>
                    <input type="text" id="room_name" class="form-control" name="room_name" placeholder="Room Name"
                        autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="meeting-date">Schedule Date:</label>
                    <input type="date" id="meeting_date" class="form-control" name="meeting_date"
                        placeholder="Meeting Date" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="start_time">Start From:</label>
                    <input type="time" id="start_time" class="form-control" name="start_time" placeholder="Start From"
                        autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="end_time">End Time:</label>
                    <input type="time" id="end_time" class="form-control" name="end_time" placeholder="End Time"
                        autocomplete="off" required>
                </div>
                </br>
                <button class="btn btn-primary btn-block mt-20" type="submit">SCHEDULE</button><br>
                <p class="text-center">Want to create Instant Meeting? <a href="/instant-meeting"> Instant Meeting</a>
                </p>
            </div>
        </div>
    </form>
</section>